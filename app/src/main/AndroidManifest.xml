<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Blog"
        tools:targetApi="31">
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:noHistory="true"
            android:label="@string/action_sign_in">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="true"
            android:noHistory="true"
            android:label="@string/profile"/>
        <activity
            android:name=".ui.registration.RegistrationActivity"
            android:exported="true"
            android:label="@string/registration"/>
        <activity
            android:name=".ui.login.ForgotYourPasswordActivity"
            android:exported="true"
            android:noHistory="true"
            android:label="@string/password_reset"/>
        <activity
            android:name=".ui.blog.PostsActivity"
            android:exported="true"
            android:noHistory="true"
            android:label="@string/posts"/>
        <activity
            android:name=".ui.blog.PostsDetailActivity"
            android:exported="true"
            android:noHistory="true"
            android:label="@string/post"/>
        <activity
            android:name=".ui.blog.CreatePostActivity"
            android:exported="true"
            android:noHistory="true"
            android:label="@string/new_post"/>
    </application>

</manifest>
